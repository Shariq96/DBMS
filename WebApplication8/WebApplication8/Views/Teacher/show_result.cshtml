@model WebApplication8.Models.resultView
@{
    ViewBag.Title = "show_result";
}

<h2>show_result</h2>

<div>
    <h4>ccra</h4>
    <hr />
    @using (Html.BeginForm())

    {
        <div class="form-group" style="padding:0px 450px 0px 0px">
            @Html.LabelFor(model => model.ccra.std_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ccra.std_id)
                @Html.ValidationMessageFor(model => model.ccra.std_id)
            </div>
        </div>
        <div class="form-group" style="padding:10px 0px">
            <div class="col-md-offset-2 col-md- 10">
                <input type="submit" value="submit" class="btn btn-default" />

            </div>
        </div>


    }
    @if (IsPost)
    {
        <table border="1">
            <tr>

                <th>@Html.DisplayNameFor(model => model.ccra.std_id)</th>
                <th>@Html.DisplayNameFor(model => model.ccra.class_id)</th>
                <th>@Html.DisplayNameFor(model => model.ccra.std_name)</th>
                <th>@Html.DisplayNameFor(model => model.ccra.marks_obt)</th>
                <th>@Html.DisplayNameFor(model => model.ccra.course_name)</th>

            </tr>
            @foreach (var item in Model.ccr)
            {
                <tr>

                    <td>   @Html.DisplayFor(model => item.std_id)</td>
                    <td>   @Html.DisplayFor(model => item.class_id)</td>
                    <td>   @Html.DisplayFor(model => item.std_name)</td>
                    <td>   @Html.DisplayFor(model => item.marks_obt)</td>
                    <td>   @Html.DisplayFor(model => item.course_name)</td>
                </tr>
            }
        </table>
    }
</div>
