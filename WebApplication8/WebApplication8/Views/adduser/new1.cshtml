@model IEnumerable<WebApplication8.Models.showallstd_Result>

@{
    ViewBag.Title = "new1";
}

<div style="padding:0px 50px; margin-top:-50px;">
    <h2>All student Bio</h2>
    


    <table class="table" style="padding:0px 450px 0px 200px">
        <tr>
            <th>
                ID
            </th>
            <th>
                NAME
            </th>
            <th>
               FATHER NAME
            </th>
            <th>
               DATE OF BIRTH
            </th>
           
            <th>
                GENDER
            </th>

            <th>
               ADDRESS TYPE
            </th>
            <th>
                ADDRESS
            </th>

            <th>
                STUDENT CONTACT
            </th>
            <th>
                Father Contact
            </th>
            <th>
                Update
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.std_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.std_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.std_fname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.std_dob)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.gender)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.addr_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.addr)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.std_contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.std_fcontact)
                </td>
                <td>
                    @Html.ActionLink("Update", "GetList",new { id=item.std_id }, new { @class = "button", style = "width:100px" })
                    @Html.ActionLink("DELETE", "GetLis", new { id = item.std_id }, new { @class = "button", style = "width:100px" })
                    
                </td>

            </tr>
        }

    </table>
</div>